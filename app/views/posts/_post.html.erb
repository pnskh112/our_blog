<div class="content">
<div class="content__left">
  <div class="content__left--image"></div>
</div>
<div class="content__right">
  <div class="content__right__top">
    <%= link_to partial_post.title, post_path(partial_post.id), class: "content__right__top--title" %>
  </div>
  <div class="content__right__bottom">
    <div class="content__right__bottom--userName">
      <%= link_to partial_post.user.nickname, user_path(partial_post.user), class: "content__right__bottom--userName--btn" %>
    </div>
    <div class="content__right__bottom--date">
      <%= partial_post.created_at %>
    </div>
  </div>
</div>
</div>